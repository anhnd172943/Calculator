<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/calScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#DCDCDC"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/calResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0d000000"
            android:text="@string/_0"
            android:textAlignment="textEnd"
            android:textColor="#ff000000"
            android:textSize="80sp"
            android:textStyle="bold"
            android:gravity="end" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="left">

        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="MC"
            android:textSize="15sp">
        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="MR"
            android:textSize="15sp">
        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="M+"
            android:textSize="15sp">
        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="M-"
            android:textSize="15sp">
        </Button>
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="MS"
            android:textSize="15sp">
        </Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="%"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="CE"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="C"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="DEL"
            android:textSize="30sp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="1/x"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="^"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text=" √a"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="÷"
            android:textSize="30sp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="7"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="8"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="9"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="×"
            android:textSize="30sp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="4"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="5"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="6"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="-"
            android:textSize="30sp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="1"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="2"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="3"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#D6D6D6"
            android:text="+"
            android:textSize="30sp">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="±"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="0"
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#E4E4E4"
            android:text="."
            android:textSize="30sp">
        </Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#AAE4FF"
            android:text="="
            android:textSize="30sp">
        </Button>

    </LinearLayout>



</LinearLayout>


